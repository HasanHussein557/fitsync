@page
@model GenerateWorkoutModel
@{
    ViewData["Title"] = "Generate Workout";
}

<div class="text-center">
    <h1 class="display-4">Generate Workout</h1>
    
    <form method="post" asp-page-handler="GenerateWorkout">
        <div class="form-group mb-3">
            <label for="weight">
                <input type="number" name="weight" class="form-control" placeholder="Weight" required/>
            </label>
        </div>
        
        <div class="form-group mb-3">
            <label for="height">
                <input type="number" name="height" class="form-control" placeholder="Height" required/>
            </label>
        </div>
        
        <div class="form-group mb-3">
            <label for="age">
                <input type="number" name="age" class="form-control" placeholder="Age" required/>
            </label>
        </div>
        
        <div class="form-group mb-3">
            <label for="sex">
                <select name="sex" class="form-control" required>
                    <option value="">Select Sex</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </label>
        </div>
        
        <div class="form-group mb-3">
            <label for="goal">
                <select name="goal" class="form-control" required>
                    <option value="">Select Goal</option>
                    <option value="strength">Strength</option>
                    <option value="cardio">Cardio</option>
                    <option value="flexibility">Flexibility</option>
                    <option value="muscle_gain">Muscle Gain</option>
                </select>
            </label>
        </div>
        
        <div class="form-group mb-3">
            <label for="workouts_per_week">
                <input type="number" name="workouts_per_week" class="form-control" placeholder="Workouts per week" required min="1" max="7"/>
            </label>
        </div>
        
        <button type="submit" class="btn btn-primary">Generate Workout Plan</button>
    </form>
    
    @if (ViewData["WorkoutPlan"] != null)
    {
        <div class="mt-4">
            <h3>Your Workout Plan</h3>
            <pre>@ViewData["WorkoutPlan"]</pre>
        </div>
    }
</div>