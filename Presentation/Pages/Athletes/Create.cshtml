@page
@model Presentation.Pages.Athletes.CreateModel
@{
    ViewData["Title"] = "Create Athlete";
}

<div class="container mx-auto px-4 py-6">
    <div class="mb-6">
        <a href="/Athletes" class="text-blue-600 hover:text-blue-800">
            <i class="fas fa-arrow-left"></i> Back to Athletes
        </a>
    </div>

    <h1 class="text-2xl font-bold mb-6">Create New Athlete</h1>

    @if (!ModelState.IsValid)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <ul>
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="bg-white p-6 rounded-lg shadow-md">
        <form method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Athlete.FirstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                    <input asp-for="Athlete.FirstName" class="form-input rounded border-gray-300 w-full" required />
                </div>

                <div>
                    <label asp-for="Athlete.LastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                    <input asp-for="Athlete.LastName" class="form-input rounded border-gray-300 w-full" required />
                </div>

                <div>
                    <label asp-for="Athlete.Age" class="block text-sm font-medium text-gray-700 mb-1">Age</label>
                    <input asp-for="Athlete.Age" type="number" min="16" max="100" class="form-input rounded border-gray-300 w-full" required />
                </div>

                <div>
                    <label asp-for="Athlete.Sex" class="block text-sm font-medium text-gray-700 mb-1">Sex</label>
                    <select asp-for="Athlete.Sex" class="form-select rounded border-gray-300 w-full" required>
                        <option value="">Select Sex</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div>
                    <label asp-for="Athlete.Height" class="block text-sm font-medium text-gray-700 mb-1">Height (cm)</label>
                    <input asp-for="Athlete.Height" type="number" min="100" max="250" class="form-input rounded border-gray-300 w-full" required />
                </div>

                <div>
                    <label asp-for="Athlete.Weight" class="block text-sm font-medium text-gray-700 mb-1">Weight (kg)</label>
                    <input asp-for="Athlete.Weight" type="number" min="30" max="300" class="form-input rounded border-gray-300 w-full" required />
                </div>

                <div>
                    <label asp-for="Athlete.Goal" class="block text-sm font-medium text-gray-700 mb-1">Fitness Goal</label>
                    <select asp-for="Athlete.Goal" class="form-select rounded border-gray-300 w-full" required>
                        <option value="">Select Goal</option>
                        <option value="Weight Loss">Weight Loss</option>
                        <option value="Muscle Gain">Muscle Gain</option>
                        <option value="Maintenance">Maintenance</option>
                        <option value="Performance">Athletic Performance</option>
                    </select>
                </div>
            </div>

            <div class="pt-4">
                <button type="submit" class="btn btn-primary px-6 py-2 rounded">Create Athlete</button>
            </div>
        </form>
    </div>
</div> 