@page
@model Presentation.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>My Profile</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <p class="form-control-plaintext">@Model.Username</p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <p class="form-control-plaintext">@Model.Email</p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Member Since</label>
                        <p class="form-control-plaintext">@Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                    
                    @if (Model.AthleteId.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Athlete Information</label>
                            <a asp-page="/Athlete/Details" asp-route-id="@Model.AthleteId" class="btn btn-outline-primary">View Athlete Profile</a>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Athlete Information</label>
                            <p>You don't have an athlete profile yet.</p>
                            <a asp-page="/Account/Onboarding" class="btn btn-outline-primary">Create Athlete Profile</a>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="./ChangePassword" class="btn btn-secondary">Change Password</a>
                    <a asp-page="./EditProfile" class="btn btn-primary">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div> 